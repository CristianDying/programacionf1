program sinfunct

implicit none
integer :: i, npts
real :: x, f_x,f__x,dx
real, parameter :: pi = 4.0 * atan (1.0)
real, parameter :: epsilon = 1.0E-6
 

  print *,  'Dame el n√∫mero de puntos en el intervalo npts= '
  read(*,*) npts

   dx = (2.0 * pi) /float(npts)
   write(*,*) 'dx= ', dx
 

  x = 0.0

  open(unit=11, file='seno.dat')

  do i = 1, npts+1, 1 

     x = dx * float(i-1)

     f_x = sin(x)

     write(11,*)  x , f_x
     if(abs(f_x) .le. epsilon) write(*,*) 'x=', x, 'es un cero de la funcion'
     
  enddo
  close(11)
  
  open(unit=11, file='coseno.dat')
  
  do i = 1, npts+1, 1
     
     x = dx * float(i-1)
     
     f__x = cos(x)
     
     write(11,*) x , f__x
     if(abs(f__x) .le. epsilon) write(*,*) 'x=', x, 'es un cero de la derivada'
    
  enddo
  close(11)

end program sinfunct 
