program sinfunct

implicit none
integer :: i, npts
real :: x,f_x,g_x,h_x,i_x,j_x,dx
real, parameter :: pi = 4.0 * atan (1.0)
real, parameter :: epsilon = 1.0E-6
 

  print *,  'Dame el n√∫mero de puntos en el intervalo npts= '
  read(*,*) npts

   dx = (2.0 * pi) /float(npts)
   write(*,*) 'dx= ', dx
 

  x = 0.0

  do i = 1, npts+1, 1 

     x = dx * float(i-1)

     f_x = sin(x)*sin(x) + cos(x)*cos(x)
     write(*,*)  x , f_x  
  enddo
  do i = 1, npts+1, 1 

     x = dx * float(i-1)
     g_x = sin(-x)
     h_x = -sin(x)
     i_x = cos(-x)
     j_x = cos(x)
     write(*,*,*,*) g_x , h_x, i_x , j_x
   
  enddo
  
        
end program sinfunct
