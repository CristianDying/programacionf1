program sinfunct

implicit none
integer :: i, npts
real :: x, g_x,f__x,dx
real, parameter :: pi = 4.0 * atan (1.0)
real, parameter :: epsilon = 1.0E-6
 

  print *,  'Dame el n√∫mero de puntos en el intervalo npts= '
  read(*,*) npts

   dx = (2.0 * pi) /float(npts)
   write(*,*) 'dx= ', dx
 

  x = 0.0

  open(unit=11, file='sen2cos2=1.dat')

  do i = 1, npts+1, 1 

     x = dx * float(i-1)

     g_x = sin(x)*sin(x) + cos(x)*cos(x)

     write(*,*)  x , g_x  
  enddo
  close(11)
        
end program sinfunct
